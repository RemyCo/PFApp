<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteActivity">

    <Button
        android:id="@+id/buttonReturnNote"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:background="@color/colorOrange"
        android:textColor="@color/colorDark"
        android:text="RETOUR"
        >

    </Button>

    <TextView
        android:id="@+id/textTitreNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/titre_taille"
        android:text="NOTE"
        android:layout_marginTop="60dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent">
    </TextView>

    <TextView
        android:id="@+id/textNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/paragrphe_taille"
        android:text="Entrez votre note : "
        android:layout_marginTop="60dp"

        app:layout_constraintTop_toBottomOf="@+id/textTitreNote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent">
    </TextView>

    <EditText
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textNote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        ></EditText>

    <Button
        android:id="@+id/buttonValide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDark"
        android:background="@color/colorOrange"
        android:textSize="10dp"
        android:text="note"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/note"
        app:layout_constraintRight_toRightOf="parent">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>